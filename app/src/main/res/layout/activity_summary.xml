<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summaryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".SummaryActivity">

    <!-- Header Title -->

    <!-- Date Range Buttons -->
    <LinearLayout
        android:id="@+id/dateButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSummaryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Date"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="157dp"
            android:layout_height="103dp"
            android:text="Summary"
            android:textColor="#212121"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Date"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Selected Date Range Display -->
    <TextView
        android:id="@+id/tvSelectedPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Showing: 01 May - 12 May"
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/dateButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/summaryCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedPeriod"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/summaryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Summary Rows will be dynamically added -->

                <TextView
                    android:text="Food: R320.00"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:text="Transport: R180.00"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:text="Entertainment: R90.00"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:text="Utilities: R150.00"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"
                    android:layout_marginVertical="12dp" />

                <TextView
                    android:text="Total: R740.00"
                    android:textSize="18sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

